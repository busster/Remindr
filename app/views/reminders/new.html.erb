<%= form_for :reminder, url: user_reminders_url(@user), class: 'form-horizontal' do |f| %>
<div><%= f.label(:group_id, "Group") %>
<%= f.collection_select :group_id, Group.where(user: @user).order(:name), :id, :name %></div>
<div><%= f.label(:contact_id, "Contacts") %>
<%= f.collection_select :contact_id, Contact.where(user: @user).order(:name), :id, :name, {}, multiple: true, size: 6 %></div>
<div><%= f.label(:body, "Reminder message") %></div>
<div><%= f.text_area :body, size: "50x5" %></div>
<div><%= f.label(:time_to_go_out, "Reminder time") %>
<%= f.datetime_field :time_to_go_out %></div>
<div><%= f.label(:number_of_recurrences, "Number of recurrences") %>
<%= f.text_field :number_of_recurrences, value: "0" %></div>

<%= f.submit %>

<% end %>