<li class="list-group-item">

  <% reminder.contacts.each do |contact| %>
    <%= link_to contact.name, user_contact_path(@user, contact) %> - <%= contact.phone_number %>
  <% end %>

  <p><%= reminder.body %></p>
  <p><%= reminder.time_to_go_out %></p>
  <p><%= reminder.number_of_recurrences %></p>
  <p><%= reminder.time_of_recurrence %></p>

  <%= link_to 'Edit', edit_user_reminder_path(current_user, reminder) %>
  <%= link_to 'Delete', user_reminder_path(current_user, reminder), method: :delete, data: {confirm: "Are you sure you want to delete?"} %>

</li>