
<%= render 'errors' %>

<div class="small-me">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h1 class="panel-title">Register a new user</h1>
    </div>
    <div class="panel-body">
      <%= form_for :group, url: user_groups_path(@user), method: "post", class: "form-horizontal" do |f| %>
        <div>
          <%= f.label(:name, "Name")%>
          <%= f.text_field(:name, class: "form-control")%>
        </div>
        <div>
          <%= f.label(:contact_id, "Contacts") %>
          <%= f.collection_select :contact_id, Contact.where(user: @user).order(:name), :id, :name, {}, multiple: true, size: 3, class: "form-control" %>
        </div>
        <div>
          <%= f.submit("Create", class: "btn btn-primary space-me")%>
        </div>
      <% end %>
    </div>
  </div>
</div>

